{
  "name": "kpt",
  "scripts": {
    "postdeploy": "bundle exec bin/heroku_setup"
  },
  "env": {
    "LANG": {
      "required": true
    },
    "LETS_ENCRYPT_REQUEST_KEY": {
      "required": true
    },
    "LETS_ENCRYPT_RESPONSE_KEY": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_LOG_TO_STDOUT": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "REDIS_URL": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    }
  },
  "formation": {
  },
  "addons": [
    "heroku-postgresql",
    "heroku-redis"
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/ruby"
    }
  ]
}
